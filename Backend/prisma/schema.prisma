generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name     String
  email    String
  password String
}

model Board {
  id        Int      @id @default(autoincrement())
  imageUrl  String   @default("default_image.jpg")
  title     String
  kudo      String   @default("No kudos yet")
  cards     Card[]
}

model Card {
  id        Int      @id @default(autoincrement())
  title   String
  boardId   Int
  board     Board    @relation(fields: [boardId], references: [id])
  likes Int          @default(0)
}
